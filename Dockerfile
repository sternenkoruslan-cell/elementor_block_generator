FROM node:20-alpine\n\n# Set the working directory\nWORKDIR /app\n\n# Copy package.json and pnpm-lock.yaml\nCOPY package.json pnpm-lock.yaml ./\n\n# Install pnpm\nRUN npm install -g pnpm\n\n# Install dependencies\nRUN pnpm install\n\n# Expose ports\nEXPOSE 3000 5173\n\n# Copy the rest of your application code\nCOPY . .\n\n# Start the application\nCMD ["pnpm", "start"]